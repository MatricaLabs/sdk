{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationDir": "./dist",
      "sourceMap": true,
      "declarationMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
  }
